{
  "manifest_version": 2,
  "name": "Zen - Homepage fixer",
  "author": "Axel Thauvin",
  "version": "1.0",
  "description": "Replace the Zen 'blank page' with a customizable homepage.",
  "chrome_url_overrides": {
    "newtab": "home/index.html"
  },
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "icons/favicon-16x16.png",
      "48": "icons/favicon-48x48.png",
      "128": "icons/favicon-128x128.png"
    },
    "default_title": "Zen Homepage Settings"
  },
  "permissions": ["tabs", "storage", "https://www.bing.com/*"],
  "icons": {
    "16": "icons/favicon-16x16.png",
    "48": "icons/favicon-48x48.png",
    "128": "icons/favicon-128x128.png"
  },
  "browser_specific_settings": {
    "gecko": { "id": "{031f023d-9f90-4ee6-8b1f-3e9ae54b7473}" },
    "data_collection_permissions": {
      "required": ["none"]
    }
  }
}
